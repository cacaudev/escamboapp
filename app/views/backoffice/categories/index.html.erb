<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categorias</h1>
                
                <% if notice %>
                  <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                      ×
                    </button>
                    <%= notice %>
                  </div>
                <% end %>
                
                <div class="panel panel-default">
                  <div class="panel-heading">
                      Categorias
                      <%= link_to new_backoffice_category_path do %>
                        <button type="button" class="btn btn-success btn-circle pull-right"
                          style="margin-top: -5px">
                          <i class="fa fa-plus"></i>
                        </button>
                      <% end %>
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                      <div class="table-responsive">
                          <table class="table table-striped table-bordered table-hover">
                              <thead>
                                  <tr>
                                    <th>#</th>
                                    <th>Descrição</th>
                                    <th></th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% @categories.each do |category| %> 
                                  <tr>
                                    <td style="width: 50px"><%= category.id %></td>
                                    <td><%= category.description %></td>
                                    <td style="width: 85px">
                                      <%= link_to edit_backoffice_category_path(category.id) do %>
                                        <button type="button" class="btn btn-warning 
                                          btn-circle">
                                          <i class="fa fa-edit"></i>
                                        </button>
                                      <% end %>
                                      <%= link_to backoffice_category_path(category.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                                        <button type="button" class="btn btn-danger 
                                          btn-circle">
                                          <i class="fa fa-trash-o"></i>
                                        </button>
                                      <% end %>
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                          </table>
                      </div>
                      <!-- /.table-responsive -->
                  </div>
                  <!-- /.panel-body -->
                  </div>
                  <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
