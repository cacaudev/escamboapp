<h1 class="page-header"><%= @categories.model_name.human(count: 2) %></h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= t('messages.listing_label', model: @categories.model_name.human(count: 2)) %>
    
    <%= link_to new_backoffice_category_path do %>
      <button type="button" class="btn btn-success btn-circle pull-right"
        style="margin-top: -5px">
        <i class="fa fa-plus"></i>
      </button>
    <% end %>
    
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th><%= @categories.human_attribute_name("description") %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %> 
                <tr>
                  <td style="width: 50px"><%= category.id %></td>
                  <td><%= category.description %></td>
                  <td style="width: 85px">
                    <%= link_to edit_backoffice_category_path(category.id) do %>
                      <button type="button" class="btn btn-warning 
                        btn-circle">
                        <i class="fa fa-edit"></i>
                      </button>
                    <% end %>
                    <%= link_to backoffice_category_path(category.id), 
                      method: :delete, 
                      data: { confirm: I18n.t('messages.confirm_with_alert', item: category.description) } do %>
                      <button type="button" class="btn btn-danger 
                        btn-circle">
                        <i class="fa fa-trash-o"></i>
                      </button>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->