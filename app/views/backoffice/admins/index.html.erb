<h1 class="page-header">Administradores</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    Listando Administradores
    <%= link_to new_backoffice_admin_path do %>
      <button type="button" class="btn btn-success btn-circle pull-right"
        style="margin-top: -5px">
        <i class="fa fa-plus"></i>
      </button>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Email</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @admins.each do |admin| %> 
                <tr>
                  <td style="width: 50px"><%= admin.id %></td>
                  <td><%= admin.email %></td>
                  <td style="width: 85px">
                    <%= link_to edit_backoffice_admin_path(admin.id) do %>
                      <button type="button" class="btn btn-warning 
                        btn-circle">
                        <i class="fa fa-edit"></i>
                      </button>
                    <% end %>
                    <%= link_to backoffice_admin_path(admin.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <button type="button" class="btn btn-danger 
                        btn-circle">
                        <i class="fa fa-trash-o"></i>
                      </button>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->