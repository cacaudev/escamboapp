<!-- Page Content -->
<div class="container">

  <div class="row">

    <div class="col-md-3">
      <p class="lead"><%= @categories.model.model_name.human(count: 2) %></p>
      <div class="list-group">
        <% @categories.each do |category| %>
          <a href="#" class="list-group-item"><%= category.description %></a>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">
      <div class="row carousel-holder">

        <div class="col-md-12">
          <div id="carousel-example-generic" class="carousel slide" 
            data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carousel-example-generic" data-slide-to="0" 
                class="active"></li>
              <li data-target="#carousel-example-generic" data-slide-to="1">
              </li>
              <li data-target="#carousel-example-generic" data-slide-to="2">
              </li>
            </ol>
            <div class="carousel-inner">
              <div class="item active">
                  <img class="slide-image" 
                    src="https://i1.wp.com/rubberchickengames.com/wp-content/uploads/2018/07/2e6a071865dabab3bb409e3c72bd4eee0a0d7255e721037c2ebb0e97d5f93ecc.jpg?w=1600"
                    alt="" style="width: auto%; height: 300px;">
              </div>
              <div class="item">
                  <img class="slide-image" 
                    src="https://vgtimes.ru/uploads/posts/2018-05/gayd-po-pillars-of-eternity-2-gde-nayti-akule-myaso-podzornuyu-trubu-i-ukradennye-plody-koiki-48147.jpg?1527527905" 
                    alt="" style="width: auto%; height: 300px;">
              </div>
              <div class="item">
                  <img class="slide-image" src="https://multizona.ru/upload/iblock/8cd/anonso.jpg" 
                  alt=""  style="width: auto%; height: 300px;">
              </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
          </div>
        </div>
      </div>

      <div class="row">

        <% @ads.each do |ad| %>        
          <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
              <%= image_tag ad.picture.url(:medium) %>
              <div class="caption">
                <h4 class="pull-right">
                  <%= humanized_money_with_symbol(ad.price) %>
                </h4>
                <h4><a href="#"><%= truncate(ad.title, length: 20) %></a>
                </h4>
                <p><%= truncate(ad.description, length: 100) %></p>
              </div>
              <div class="ratings">
                <p class="pull-right">15 reviews</p>
                <p>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
<!-- /.container -->